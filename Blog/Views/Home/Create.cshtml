@{
    ViewBag.Title = "Create";
}

@section scripts 
{
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
}
<h2>Create a new post</h2>

<form class="form-horizontal" id="commentForm" role="form" method="post">
        <div class="form-group">
            <label class="control-label" for="title">Title</label>
            <div class="controls">
                <input type="text" class="form-control" id="title" minlength="10" name="Title" data-val="true" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="textarea">Body</label>
            <div class="controls">
                <textarea class="form-control" name="Body" rows="5" data-val="true" data-val-required="*"></textarea>
                <div class="field-validation-valid" data-valmsg-for="Body" data-valmsg-replace="true"></div>
            </div>
        </div>
    <input class="btn btn-default" type="submit" name="Submit" value="Submit" />
</form>
